datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Currency {
  createdAt         DateTime        @default(now())
  id                String          @id @default(cuid())
  updatedAt         DateTime        @updatedAt
  financialAsset FinancialAsset?
}

model CryptoToken {
  createdAt         DateTime        @default(now())
  id                String          @id @default(cuid())
  updatedAt         DateTime        @updatedAt
  financialAsset FinancialAsset?
}

model FinancialAsset {
  createdAt   DateTime     @default(now())
  cryptoToken CryptoToken? @relation(fields: [cryptoTokenId], references: [id])
  cryptoTokenId String? @unique
  currency Currency? @relation(fields: [currencyId], references: [id])
  currencyId String? @unique
  id          String       @id @default(cuid())
  updatedAt   DateTime     @updatedAt
}


